<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:NastyaLab5.ViewModels"
        mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
        x:Class="NastyaLab5.Views.DialogWindow"
        x:DataType="viewModels:DialogViewModel"
        Title="Добавить новую задачу" 
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner">
    
    
    <StackPanel Margin="10">
        <TextBlock Text="Title:"></TextBlock>
        <TextBox Text="{Binding Title, Mode=TwoWay}" Margin="0,0,0,10" 
                 Watermark="Название задачи"></TextBox>

        <TextBlock Text="Description:"></TextBlock>
        <TextBox Text="{Binding Description, Mode=TwoWay}" Margin="0,0,0,10"
                 Watermark="Описание задачи"></TextBox>

        <TextBlock Text="Date:"></TextBlock>
        <DatePicker SelectedDate="{Binding Deadline, Mode=TwoWay}" Margin="0,0,0,10"></DatePicker>

        <TextBlock Text="Tags:"></TextBlock>
        <TextBox Text="{Binding Tags, Mode=TwoWay}" Margin="0,0,0,10"
                 Watermark="Теги"></TextBox>

        <Button Content="Сохранить" Margin="0,0,0,10" Command="{Binding ConfirmAction}"></Button>
    </StackPanel>
</Window>
